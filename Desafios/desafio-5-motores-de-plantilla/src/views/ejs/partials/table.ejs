<html>
  <head>
    <%- include('./head.ejs')%>
  </head>
  <body>
    <div class="card">
      <div class="card-body">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Title</th>
              <th scope="col">Price</th>
              <th scope="col">Image</th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach(producto => { %>
            <tr>
              <td>
                <a href="/api/productos/<%= producto.id %>"
                  ><%= producto.id %></a
                >
              </td>
              <td><%= producto.title %></td>
              <td>$ <%= producto.price %></td>
              <td><img src="<%" ="producto.thumbnail" % /> alt=""></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
