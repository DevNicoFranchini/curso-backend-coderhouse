<div class="card">
  <div class="card-body">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Title</th>
          <th scope="col">Price</th>
          <th scope="col">Image</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>{{product.id}}</td>
          <td>{{product.title}}</td>
          <td>$ {{product.price}}</td>
          <td><img src={{product.thumbnail}} alt="" width="50" /></td>
        </tr>
      </tbody>
    </table>
    <div class="text-center">
      <a href="/" class="btn btn-danger mt-1">Volver al Inicio</a>
    </div>
  </div>
</div>