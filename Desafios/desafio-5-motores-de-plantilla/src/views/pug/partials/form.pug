div
  form(action="/api/productos" method="post")
    div(class="mb-3")
      label(class="form-label") Titulo del Producto
      input(type="text" id='title' class="form-control" name="title" required)
    
    div(class="mb-3")
      label(class="form-label") Precio del Producto
      input(type="number" class="form-control" id='price' name="price" required)
    
    div(class="mb-3")
      label(class="form-label") URL de la foto
      input(type="url" class="form-control" id='thumbnail' name="thumbnail" required)
    
    button(type="submit" class="btn btn-primary") Crear Producto