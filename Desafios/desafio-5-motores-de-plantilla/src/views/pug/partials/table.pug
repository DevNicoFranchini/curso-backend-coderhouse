html  
    head
        include ./head.pug
    body
    div(class="card")
        div(class="card-body")
            table(class="table")
                thead
                    tr
                        th(scope="col") ID
                        th(scope="col") title
                        th(scope="col") Price
                        th(scope="col") Image

                tbody
                each product in products
                    tr
                        td(scope="row") 
                            a(href="/api/productos/"+product.id)=product.id
                        td(scope="row")=product.title
                        td(scope="row")=product.price
                        td(scope="row")
                            img(src=product.thumbnail width=50)